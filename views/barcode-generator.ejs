<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Generate Barcodes - Attendance System</title>
  <link rel="stylesheet" href="/css/style.css">
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
  <script src="https://cdnjs.cloudflare.com/ajax/libs/jsbarcode/3.11.5/JsBarcode.all.min.js"></script>
</head>
<body>
  <div class="container">
    <header>
      <div class="logo">
        <i class="fas fa-qrcode"></i>
        <h1>Attendance System</h1>
      </div>
      <nav>
        <ul>
          <li><a href="/">Home</a></li>
          <li><a href="/student-list">Student List</a></li>
          <li><a href="/barcode-generator" class="active">Generate Barcodes</a></li>
        </ul>
      </nav>
    </header>

    <main>
      <div class="page-header">
        <h2>Generate Barcodes</h2>
        <div class="header-actions">
          <button id="generate-all-barcodes" class="btn primary-btn">
            <i class="fas fa-print"></i> Print All Barcodes
          </button>
          <button id="generate-selected-barcodes" class="btn secondary-btn">
            <i class="fas fa-print"></i> Print Selected
          </button>
        </div>
      </div>

      <div class="barcode-selection">
        <h3>Select Students</h3>
        <div class="selection-controls">
          <button id="select-all" class="btn small">Select All</button>
          <button id="deselect-all" class="btn small">Deselect All</button>
          <div class="search-container">
            <input type="text" id="search-student" placeholder="Search students...">
            <button id="search-barcode-btn" class="btn">
              <i class="fas fa-search"></i>
            </button>
          </div>
        </div>

        <div class="student-list">
          <% if (students && students.length > 0) { %>
            <% students.forEach(student => { %>
              <div class="student-item">
                <input type="checkbox" id="student-<%= student.id %>" value="<%= student.id %>" class="student-checkbox">
                <label for="student-<%= student.id %>">
                  <%= student.givenName %> <%= student.surname %> (ID: <%= student.id %>)
                </label>
                <div class="preview-barcode">
                  <svg class="barcode" 
                    jsbarcode-format="CODE128"
                    jsbarcode-value="<%= student.barcode %>"
                    jsbarcode-width="1"
                    jsbarcode-height="30"
                    jsbarcode-fontSize="12">
                  </svg>
                </div>
              </div>
            <% }); %>
          <% } else { %>
            <p>No students found</p>
          <% } %>
        </div>
      </div>
    </main>
  </div>

  <script>
    // Initialize JsBarcode
    JsBarcode(".barcode").init();
  </script>
  <script src="/js/main.js"></script>
</body>
</html>